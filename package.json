{
  "name": "@novawallet/extension",
  "browserslist": "> 0.25%, not dead",
  "description": "A Novawallet signer for the @polkadot/api",
  "version": "0.1.0",
  "author": "Ruslan Rezin <ruslan@novawallet.io>",
  "license": "Apache-2",
  "scripts": {
    "clean": "rm -rf dist .cache",
    "build": "yarn build:src && yarn build:rm && yarn build:copy && yarn build:web",
    "build:src": "rm -rf dist && parcel build src/index.ts src/background.ts --dist-dir dist",
    "build:rm": "rm extension/index.js extension/background.js",
    "build:copy": "cp dist/index.js dist/background.js extension/",
    "build:web": "rm -rf dist && parcel build ./extension/manifest.json --config @parcel/config-webextension",
    "lint": "prettier --write 'src/**/*.ts'",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register -r jsdom-global/register 'src/test/**/*.ts' --timeout 20000",
    "jest-init": "jest --init"
  },
  "dependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@babel/runtime": "^7.11.2",
    "@polkadot/api": "^9.5.1",
    "@polkadot/extension-base": "^0.38.4",
    "@polkadot/extension-dapp": "^0.38.4",
    "@polkadot/extension-inject": "^0.38.4",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^18.8.5",
    "babel-jest": "^27.4.5",
    "chai": "^4.3.4",
    "jest-cli": "^27.4.5",
    "jsdom": "^20.0.1",
    "jsdom-global": "^3.0.2",
    "mocha": "^9.1.3",
    "node-gyp": "^9.3.0",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "webpack": "^5.74.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@parcel/config-webextension": "^2.7.0",
    "babel-loader": "^8.0.6",
    "crypto-browserify": "^3.12.0",
    "jest": "^27.4.5",
    "parcel": "^2.7.0",
    "parcel-plugin-static-files-copy": "^2.6.0",
    "prettier": "^1.19.1",
    "stream-browserify": "^3.0.0",
    "typescript": "^4.5.4"
  },
  "staticFiles": {
    "staticPath": [
      "extension"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)s?$": "ts-jest"
    }
  }
}
