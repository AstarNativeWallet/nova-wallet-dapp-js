{
  "manifest_version": 3,
  "version": "0.0.1",
  "author": "Folios",
  "description": "Folios wallet.",
  "homepage_url": "https://github.com/AstarNativeWallet/nova-wallet-dapp-js",
  "name": "Folios wallet",
  "short_name": "Folios",
  "permissions": ["storage", "tabs", "scripting"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "browser_action": {
    "default_title": "Folios extension",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    { "resources": ["index.js"], "matches": ["http://*/*", "https://*/*"] }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
