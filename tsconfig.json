{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "isolatedModules": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "/dist",
    "baseUrl": "./src",
    "paths": {
      "*": ["/*.d.ts"]
    },
  },
}
